{
  "name": "@mstssk/cleandir",
  "version": "1.1.0-alpha.1",
  "description": "Cleanup directories.",
  "keywords": [
    "clean",
    "directory"
  ],
  "homepage": "https://github.com/mstssk/cleandir#readme",
  "bugs": {
    "url": "https://github.com/mstssk/cleandir/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mstssk/cleandir.git"
  },
  "license": "MIT",
  "author": "@mstssk",
  "main": "dist/cleandir.js",
  "module": "esm/cleandir.js",
  "types": "dist/cleandir.d.ts",
  "bin": {
    "cleandir": "bin/cleandir.js"
  },
  "files": [
    "bin/",
    "dist/",
    "esm/"
  ],
  "scripts": {
    "prebuild": "rm -rf dist/* esm/*",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "fmt": "npx prettier --write .",
    "lint": "npx prettier --check .",
    "pretest": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "copyfiles": "^2.4.1",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "semver": "^7.3.4",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=12.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
